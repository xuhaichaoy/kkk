{
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"frontendDist": "../dist",
		"devUrl": "http://127.0.0.1:5174"
	},
	"bundle": {
		"active": true,
		"category": "Video",
		"copyright": "GPL-3.0-only",
		"windows": {
			"certificateThumbprint": null,
			"digestAlgorithm": "sha256",
			"timestampUrl": "",
			"nsis": {
				"sidebarImage": "../public/installerSideBarImage.bmp",
				"headerImage": "../public/installerHeaderImage.bmp",
				"installerIcon": "icons/icon.ico",
				"displayLanguageSelector": true
			}
		},
		"externalBin": [],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		],
		"linux": {
			"deb": {
				"depends": []
			},
			"appimage": {
				"bundleMediaFramework": true
			}
		},
		"longDescription": "A modern desktop client for Jellyfin",
		"macOS": {
			"entitlements": "entitlements.plist",
			"exceptionDomain": "",
			"frameworks": [],
			"providerShortName": null,
			"signingIdentity": null
		},
		"resources": [],
		"shortDescription": "Blink",
		"targets": ["deb", "appimage", "nsis", "app", "dmg"],
		"licenseFile": "../LICENSE"
	},
	"productName": "Blink",
	"version": "../package.json",
	"identifier": "com.blink.prayag17",
	"plugins": {
		"notification": null
	},
	"app": {
		"windows": [
			{
				"fullscreen": false,
				"height": 600,
				"width": 800,
				"resizable": true,
				"title": "Blink",
				"visible": true,
				"center": true,
				"label": "main",
				"dragDropEnabled": false,
				"backgroundColor": "#08001f",
				"transparent": false
			}
		],
		"security": {
			"csp": null
		}
	}
}
